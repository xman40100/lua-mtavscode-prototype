{
    "Create command handler": {
        "description": "Create a command handler.",
        "prefix": "command handler",
        "body": [
            "addCommandHandler(\"$1\", function(player, cmd, val)",
            "   $0",
            "end, false)"
        ]
    },
    "Custom event & handler": {
        "description": "Creates a custom event and then adds a custom event handler",
        "prefix": "custom event",
        "body": [
            "createEvent(\"${1:customEvent}\", ${2:false})",
            "addEventHandler(\"${1:customEvent}\", root, function()",
            "   $0",
            "end)"
        ]
    },
    "Create function": {
        "description": "This snippet creates a function automatically for you",
        "prefix": "create function",
        "body": [
            "function $1($2)",
            "   $0",
            "end"
        ]
    },
    "For loop (indexed keys)": {
        "description": "Create a for loop using the ipairs function, to loop through number-indexed tables.",
        "prefix": [
            "indexed loop",
            "ipairs loop"
        ],
        "body": [
            "for k,v in ipairs($1) do",
            "   $0",
            "end"
        ]
    },
    "For loop (associative keys)": {
        "description": "Create a for loop using the pairs function, to loop through associative tables.",
        "prefix": [
            "associative loop",
            "pairs loop"
        ],
        "body": [
            "for k,v in pairs($1) do",
            "   $0",
            "end"
        ]
    }
}